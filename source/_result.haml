.row-fluid{id: snakecase(location)}
  %h3= location.titleize
  .col-lg-12
    %table.table
      %thead
        %tr
          %th.col-lg-5 Game
          %th.col-lg-3 ISP
          %th.col-lg-1 Plan
          %th.col-lg-3 Ave Ping (sample size)
        - game_data.each do |game, isp_data|

          - ctr = 0
          - ping_count =  game_data.each do |isp,package_data|
            - package_data.each do |package, pings|
              - ctr += pings.count

          - isp_data.take(1).each do |isp, package_data|

            - package_data.take(1).each do |package, pings|
              %tr
                %td{rowspan: ping_count}= game.titleize
                %td= isp.titleize
                %td= package
                %td{class: ping_class(average(pings))}
                  = average(pings)
                  ms
                  (#{pings.count})
            - package_data.drop(1).each do |package, pings|
              %tr
                %td
                %td= isp.titleize
                %td= package
                %td{class: ping_class(average(pings))}
                  = average(pings)
                  ms
                  (#{pings.count})

          - isp_data.drop(1).each do |isp, package_data|
            - package_data.take(1).each do |package, pings|
              %tr
                %td{rowspan: ping_count}= game.titleize
                %td= isp.titleize
                %td= package
                %td{class: ping_class(average(pings))}
                  = average(pings)
                  ms
                  (#{pings.count})
            - package_data.drop(1).each do |package, pings|
              %tr
                %td
                %td= isp.titleize
                %td= package
                %td{class: ping_class(average(pings))}
                  = average(pings)
                  ms
                  (#{pings.count})
